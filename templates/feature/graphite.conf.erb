// managed by puppet

library "perfdata"

object GraphiteWriter "graphite" {
  host = "<%= scope['icinga2::feature::graphite::host'] %>"
  port = <%= scope['icinga2::feature::graphite::port'] %>
  host_name_template = "<%= scope['icinga2::feature::graphite::host_name_template'] %>"
  service_name_template = "<%= scope['icinga2::feature::graphite::service_name_template'] %>"
  enable_send_thresholds = <%= scope['icinga2::feature::graphite::enable_send_thresholds'] %>
  enable_send_metadata = <%= scope['icinga2::feature::graphite::enable_send_metadata'] %>
}
